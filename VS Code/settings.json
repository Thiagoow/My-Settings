{
  //Seta o End of Line Sequence dos arquivos pra LF (no Windows) como padrão:
  "files.eol": "\n",

  //Envia a commit assim que eu crio ela, sem confirmar a sincronização:
  "git.confirmSync": false,
  //Verifica automaticamente se tem changes no repos:
  "git.autofetch": true,

  //Tema & icon pack que eu uso:
  "workbench.colorTheme": "Omni Owl",
  "workbench.iconTheme": "material-icon-theme",

  //Configs da minha fonte:
  "editor.fontFamily": "Jetbrains Mono",
  "editor.fontSize": 13,
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.4,
  "editor.tabSize": 2,
  "editor.letterSpacing": 0.4,
  "editor.fontWeight": "normal",

  //Configs do meu Prettier:
  "prettier.semi": true,
  "prettier.endOfLine": "lf",
  "editor.formatOnSave": true,
  "prettier.singleQuote": true,
  "editor.smoothScrolling": true,
  "prettier.trailingComma": "none",

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  //Ativa a antiga extensão Bracket-Pair-Colorizer-2 agora nativa no Vs Code:
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.bracketPairsHorizontal": "active",
  "editor.guides.highlightActiveBracketPair": false,
  /*
  Adicionei também a cor do primeiro bracket com a cor
  gold por padrão, lá no "workbench.colorCustomizations"
  */

  //Muda os ícones das pastas do VsCode:
  "material-icon-theme.folders.associations": {
    //7-1 Sass folder organization patern:
    "abstracts": "config",
    //Para que as pastas do AtomicDesign tbm fiquem com o icon de components:
    "bosons": "components",
    "quarks": "components",
    "atoms": "components",
    "molecules": "components",
    "organisms": "components",
    "templates": "components"
    //"pages": "components"
  },

  "editor.cursorBlinking": "expand",
  "workbench.startupEditor": "none",
  "workbench.editor.untitled.hint": "hidden",
  //Tira as linhas coloridas do lado esquerdo do editor:
  "scm.diffDecorations": "none",

  "team.showFarewellMessage": false,
  "team.showWelcomeMessage": false,
  "editor.minimap.enabled": false,
  "workbench.layoutControl.enabled": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

