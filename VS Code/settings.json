    "divs",
    "ecmascript",
    "favicon",
    "flexbox",
    "fontawesome",
    "fortawesome",
    "freezando",
    "greenyellow",
    "imageurl",
    "isabelli",
    "js",
    "jsxdev",
    "lopes",
    "lulee",
    "maykbrito",
    "mensagem",
    "microframework",
    "middlewares",
    "millena",
    "minmax",
    "mnsg",
    "mnsgs",
    "mostra",
    "nlw",
    "node",
    "nodejs",
    "nuxt",
    "nuxtjs",
    "o",
    "origamid",
    "paraaaaa",
    "repos",
    "respawn",
    "rgba",
    "rocketseat",
    "scripthost",
    "swiper",
    "tipar",
    "transpilar",
    "ts",
    "typeorm",
    "varchar",
    "viacep",
    "vue",
    "vuejs",
    "vuex",
    "webservice",
    "yungsilva"
  ],
  "editor.fontWeight": "normal",
  "cSpell.language": "en,pt-BR",
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,

  //Configs Rocketseat:
  "editor.renderLineHighlight": "gutter",
  "workbench.editor.labelFormat": "default",
  "extensions.ignoreRecommendations": true,

  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "never",

  "breadcrumbs.enabled": true,
  "editor.parameterHints.enabled": false,
  "explorer.confirmDragAndDrop": false,

  "emmet.syntaxProfiles": { "javascript": "jsx" },
  "emmet.includeLanguages": { "javascript": "javascriptreact" },

  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "kite.showWelcomeNotificationOnStartup": false,

  //Configs Cataline Bootcamp:
  "vetur.format.defaultFormatter.js": "prettier",
  "vetur.format.defaultFormatter.html": "prettier",
  "vetur.experimental.templateInterpolationService": true,

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "support.class.component.html",
        "settings": {
          "foreground": "#569CD6"
        }
      }
    ]
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.cursorBlinking": "expand",
  "workbench.startupEditor": "none",
  "workbench.editor.untitled.hint": "hidden",

  //Configs terminal Windows Terminal + PowerShell:
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "path": [
        "${env:windir}\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
      ],
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-NoLogo"]
    }
  },
  "vetur.format.options.tabSize": 4,
  "cSpell.enableFiletypes": ["vue"],
  "liveServer.settings.donotVerifyTags": true,
  "workbench.colorTheme": "Omni",

  /* Configs extensão ToDo Tree: */
  "todo-tree.tree.hideTreeWhenEmpty": true,
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "todo-tree.general.statusBar": "total",
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO"],
  "todo-tree.highlights.defaultHighlight": {
    "icon": "alert",
    "type": "text",
    "foreground": "black",
    "background": "yellow",
    "opacity": 50,
    "iconColour": "blue"
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "type": "line",
      "gutterIcon": true
    },
    "FIXME": {
      "foreground": "black",
      "iconColour": "yellow",
      "gutterIcon": true
    }
  }
}
