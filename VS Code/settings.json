  //Configs Rocketseat:
  "editor.renderLineHighlight": "gutter",
  "workbench.editor.labelFormat": "default",
  "extensions.ignoreRecommendations": true,

  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  //See what props needs to be passed to function whitout hover:
  "typescript.inlayHints.parameterNames.enabled": "none",

  "breadcrumbs.enabled": true,
  "editor.parameterHints.enabled": false,
  "explorer.confirmDragAndDrop": false,

  "emmet.syntaxProfiles": { "javascript": "jsx" },
  "emmet.includeLanguages": { "javascript": "javascriptreact" },

  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",

  //Volar (new Vue 3 extension) configs:
  "volar.icon.splitEditors": false,
  "volar.icon.preview": false,

  //Configs terminal Windows Terminal + PowerShell:
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "path": [
        "${env:windir}\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
      ],
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-NoLogo"]
    }
  },
  "cSpell.enableFiletypes": ["vue"],
  "liveServer.settings.donotVerifyTags": true,

  /* Configs extensão ToDo Tree: */
  "todo-tree.tree.scanAtStartup": true,
  "todo-tree.tree.scanMode": "workspace",
  "todo-tree.general.statusBar": "total",
  "todo-tree.tree.showCountsInTree": true,
  "todo-tree.tree.hideTreeWhenEmpty": true,
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO"],
  "todo-tree.highlights.defaultHighlight": {
    "icon": "alert",
    "type": "text",
    "foreground": "#000",
    "background": "#ffff00",
    "opacity": 90,
    "iconColour": "#0000ff"
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "type": "tag-and-subTag",
      "background": "#ffff00",
      "gutterIcon": true
    },
    "BUG": {
      "type": "text",
      "foreground": "#fff",
      "background": "#ff0000",
      "iconColour": "#ff0000",
      "gutterIcon": true
    },
    "FIXME": {
      "type": "whole-line",
      "foreground": "#000",
      "iconColour": "#ffff00",
      "gutterIcon": true
    }
  },
  "todo-tree.highlights.enabled": true,
  "todo-tree.filtering.excludeGlobs": ["**/node_modules/**"],
  "todo-tree.general.statusBarClickBehaviour": "reveal",

  "workbench.colorCustomizations": {
    /* Personalizações que eu uso nos meus temas do Vs Code
    para aplicar um fundo preto puro: */
    "activityBar.background": "#000",
    "badge.background": "#000",
    "debugToolBar.background": "#000",
    "dropdown.border": "#000",
    "editor.background": "#000",
    "editorGroup.border": "#000",
    "editorGroup.emptyBackground": "#000",
