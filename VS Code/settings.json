{
  //Seta o End of Line Sequence dos arquivos pra LF como padrão para evitar bugs:
  "files.eol": "\n",

  //Minha estilização do Vs Code:
  "workbench.iconTheme": "material-icon-theme",

  //Configs do meu Prettier:
  "prettier.semi": true,
  "prettier.trailingComma": "none",

  //Para que as pastas do AtomicDesign tbm fiquem com o icon de components:
  "material-icon-theme.folders.associations": {
    "bosons": "components",
    "quarks": "components",
    "atoms": "components",
    "molecules": "components",
    "organisms": "components",
    "templates": "components",
    "pages": "components"
  },
  "editor.renderIndentGuides": false,
  "team.showFarewellMessage": false,
  "team.showWelcomeMessage": false,
  "git.autofetch": true,

  //Envia a commit assim que eu crio ela, sem confirmar a sincronização:
  "git.confirmSync": false,
  "editor.fontFamily": "'JetBrains Mono'",
  "editor.fontSize": 13,
  "editor.fontLigatures": true,
  "editor.letterSpacing": 0.4,
  "editor.smoothScrolling": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "tabnine.experimentalAutoImports": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "cSpell.userWords": [
    "API's",
    "Avenir",
    "Axios",
    "Bootcamp",
    "CEPs",
    "Cataline",
