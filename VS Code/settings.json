    "editorHoverWidget.background": "#000",
    "editorHoverWidget.border": "#000",
    "editorMarkerNavigation.background": "#000",
    "editorSuggestWidget.background": "#000",
    "editorSuggestWidget.border": "#000",
    //"editorWidget.background": "#000",
    "focusBorder": "#000",
    "sideBar.background": "#000",
    "sideBarSectionHeader.background": "#000",
    "statusBar.background": "#000",
    "statusBar.noFolderBackground": "#000",
    "tab.activeBackground": "#000",
    "tab.border": "#000",
    "tab.inactiveBackground": "#000",
    "titleBar.activeBackground": "#000",
    "titleBar.inactiveBackground": "#000",
    "sideBarSectionHeader.border": "#000",
    "breadcrumb.background": "#13111b",
    "terminal.background": "#000",
    "terminal.selectionForeground": "#fff",
    "terminal.selectionBackground": "#f81ce5",
    // Dracula Theme colors for files on the sidebar (& widgets):
    "list.hoverBackground": "#44475a75",
    "list.activeSelectionBackground": "#44475a",
    "list.activeSelectionForeground": "#f8f8f2",
    "list.dropBackground": "#44475a",
    "list.errorForeground": "#ff5555",
    "list.focusBackground": "#44475a75",
    "list.highlightForeground": "#8be9fd",
    "list.inactiveSelectionBackground": "#44475a75",
    "list.warningForeground": "#ffb86c",
    "listFilterWidget.background": "#343746",
    "listFilterWidget.noMatchesOutline": "#ff5555",
    "listFilterWidget.outline": "#424450",
    // Dracula Theme colors for modified files:
    "gitDecoration.modifiedResourceForeground": "#8be9fd",
    "gitDecoration.stageModifiedResourceForeground": "#8be9fd",
    "editorLink.activeForeground": "#8be9fd",

    //Deixa os primeiros brackets com a cor:
    "editorBracketHighlight.foreground1": "#ffd700",

    /* Tira as indicações coloridas da scrollbar: */
    "editorOverviewRuler.addedForeground": "#000",
    "editorOverviewRuler.modifiedForeground": "#000",
    "editorOverviewRuler.deletedForeground": "#000",

    /* Achar a cor que vc quer modificar de algum tema: 
      1º Ctrl+Shift+P;
      2º Pesquise: Generate color theme
      e selecione a primeira opção;
      3º Ache a cor(es) que você quer alterar e insira aqui
    */

    //Personalização individual do tema:
    "[ƒ - One Dark]": {
      //Cor do texto dos arquivos do repos quando ele é modificado
      "gitDecoration.modifiedResourceForeground": "#e2c08d"
    }
  },

  "git.ignoreRebaseWarning": true,
  "remoteHub.commitDirectlyWarning": "off",
  "diffEditor.ignoreTrimWhitespace": false,

  // Configs do compilador de C/C++:
  "c-cpp-compile-run.cpp-flags": " -Wall -Wextra",
  /* ☝🏼 std=c17 --> Roda na versão estável mais atual */
  "c-cpp-compile-run.should-show-notifications": false,
  "c-cpp-compile-run.c-compiler": "C:\\Program Files\\TDM-GCC-64\\bin\\gcc",
  "c-cpp-compile-run.cpp-compiler": "C:\\Program Files\\TDM-GCC-64\\bin\\g++",
  /*Format Cpp/C files with the ms extension which already has clang-format installed: */
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 3, IncludeBlocks: Merge, IndentGotoLabels: true, KeepEmptyLinesAtTheStartOfBlocks: true}",
  "editor.linkedEditing": true,
  "editor.guides.indentation": false,
  "editor.inlineSuggest.enabled": true
}
