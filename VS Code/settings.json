  "typescript.suggest.autoImports": true,
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "kite.showWelcomeNotificationOnStartup": false,

  //Configs Cataline Bootcamp:
  "vetur.format.defaultFormatter.js": "prettier",
  "vetur.format.defaultFormatter.html": "prettier",
  "vetur.experimental.templateInterpolationService": true,

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "support.class.component.html",
        "settings": {
          "foreground": "#569CD6"
        }
      }
    ]
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.cursorBlinking": "expand",
  "workbench.startupEditor": "none",
  "workbench.editor.untitled.hint": "hidden",

  //Configs terminal Windows Terminal + PowerShell:
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "path": [
        "${env:windir}\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
      ],
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-NoLogo"]
    }
  },
  "vetur.format.options.tabSize": 4,
  "cSpell.enableFiletypes": ["vue"],
  "liveServer.settings.donotVerifyTags": true,

  /* Configs extens√£o ToDo Tree: */
  "todo-tree.tree.hideTreeWhenEmpty": true,
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "todo-tree.general.statusBar": "total",
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO"],
  "todo-tree.highlights.defaultHighlight": {
    "icon": "alert",
    "type": "text",
    "foreground": "black",
    "background": "yellow",
    "opacity": 50,
    "iconColour": "blue"
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "type": "line",
      "gutterIcon": true
    },
    "FIXME": {
      "foreground": "black",
      "iconColour": "yellow",
      "gutterIcon": true
    }
  },
  "todo-tree.highlights.enabled": true,
  "todo-tree.general.statusBarClickBehaviour": "cycle",

